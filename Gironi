import java.util.Scanner;
import java.lang.Math;
public class Gironi{

   public Gironi(String n, double v){
         nome = n;
         numero = v;}

   public double getvalore(){ return numero;}

   public static void main(String[] args){
      boolean x = true;
          while (x){
              Scanner s = new Scanner(System.in);
              System.out.println("inserisci il numero di squadre qui:");
              int x = s.nextint();
              Gironi[] array = new Gironi[x];
              int i = 0;
              while(i<x){
                 System.out.println("inserisci il nome della " + i+1 + " squadra qui:");
                 String m = s.next();
                 double value= Math.random();
                 Gironi[i]= new Gironi(m,value);
                 m=value= null;
                 i++;}
          int z=0;
          while(z<x){
              if array[z].getvalore() > array[z+1].getvalore() {
                    Gironi temp = array[z+1];
                    array[z+1] = array[z];
                    array[z]= temp;
                    z=0;}
              else
                 i++;
              }
